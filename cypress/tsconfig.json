{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "@testing-library/cypress", "node"],
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "strict": true,
    "noEmit": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "../node_modules",
    "../__tests__/**/*",
    "../**/*.test.ts",
    "../**/*.test.tsx",
    "../**/*.spec.ts",
    "../**/*.spec.tsx"
  ]
}
