# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-url.herokuapp.com
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Email Alert Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=sending-account@gmail.com        # The Gmail account that will SEND alerts
EMAIL_PASSWORD=app-specific-password        # App password from the SENDING account above
ALERT_EMAIL_RECIPIENT=receiving-account@gmail.com  # Email where you want to RECEIVE alerts

# Note: For the SENDING Gmail account (EMAIL_USER):
# 1. Enable 2-Step Verification in that Gmail account
# 2. Go to Security > App Passwords
# 3. Generate a new App Password for 'Mail'
# 4. Use that password as EMAIL_PASSWORD

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Feature Flags
NEXT_PUBLIC_ENABLE_METRICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_MODEL_SELECTION=true 