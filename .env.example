# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-url.herokuapp.com
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Email Alert Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
ALERT_EMAIL_RECIPIENT=alerts-recipient@example.com

# Note: For Gmail, you need to use an App Password
# 1. Enable 2-Step Verification in your Google Account
# 2. Go to Security > App Passwords
# 3. Generate a new App Password for 'Mail'
# 4. Use that password here

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Feature Flags
NEXT_PUBLIC_ENABLE_METRICS_DASHBOARD=true
NEXT_PUBLIC_ENABLE_MODEL_SELECTION=true 